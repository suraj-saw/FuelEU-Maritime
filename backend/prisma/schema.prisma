generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------------------------
// ROUTES — Base route data
// ------------------------------------------------------------
model Route {
  id              String   @id @default(cuid())
  routeId         String   @unique
  vesselType      String
  fuelType        String
  year            Int
  ghgIntensity    Float
  fuelConsumption Float
  distance        Float
  totalEmissions  Float
  isBaseline      Boolean  @default(false)

  shipCompliance  ShipCompliance[]
  bankEntries     BankEntry[]
  poolMembers     PoolMember[]

  @@map("routes")
}

// ------------------------------------------------------------
// SHIP COMPLIANCE — CB Records
// ------------------------------------------------------------
model ShipCompliance {
  id        String   @id @default(cuid())
  shipId    String
  year      Int
  cbGco2eq  Float

  routeId   String
  route     Route    @relation(fields: [routeId], references: [routeId])

  @@unique([shipId, year])
  @@map("ship_compliance")
}

// ------------------------------------------------------------
// BANK ENTRIES — Banked surplus
// ------------------------------------------------------------
model BankEntry {
  id            String   @id @default(cuid())
  shipId        String
  year          Int
  amountGco2eq  Float

  routeId       String
  route         Route    @relation(fields: [routeId], references: [routeId])

  @@unique([shipId, year])
  @@map("bank_entries")
}

// ------------------------------------------------------------
// POOLS — Group of ships
// ------------------------------------------------------------
model Pool {
  id         String   @id @default(cuid())
  year       Int
  createdAt  DateTime @default(now())

  members    PoolMember[]

  @@map("pools")
}

// ------------------------------------------------------------
// POOL MEMBERS — Members & allocation
// ------------------------------------------------------------
model PoolMember {
  id        String   @id @default(cuid())
  poolId    String
  shipId    String
  cbBefore  Float
  cbAfter   Float
  routeId   String

  pool      Pool     @relation(fields: [poolId], references: [id])
  route     Route    @relation(fields: [routeId], references: [routeId])

  @@unique([poolId, shipId])
  @@map("pool_members")
}
